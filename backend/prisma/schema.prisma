generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id     Int     @id @default(autoincrement())
  nome   String
  email  String
  status Boolean
  ativos Ativo[] // Sem a necessidade de onDelete aqui
}

model Ativo {
  id        Int     @id @default(autoincrement())
  nome      String
  valor     Float
  clienteId Int
  cliente   Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade) // Cascateamento de deleção no lado da relação inversa
}


